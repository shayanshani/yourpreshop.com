@model PreShop.BL.TblRegistration

<div class="col-lg-6 col-md-6">
    <div class="account_form login">
        <h2>Register</h2>
        @using (Html.BeginForm("Register", "Registration", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <p class="form-messege">@Html.ValidationMessage("RegistrationError")</p>
            <div class="row">
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" })
                    @Html.ValidationMessageFor(m => m.FirstName, null, new { style = "color:red" })
                </div><div class="col-sm-6">
                    @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name" })
                    @Html.ValidationMessageFor(m => m.LastName, null, new { style = "color:red" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label>&nbsp;</label>
                    @Html.TextBoxFor(m => m.Contact, new { placeholder = "Contact" })
                    @Html.ValidationMessageFor(m => m.Contact, null, new { style = "color:red" })
                </div><div class="col-sm-6">
                    <label>&nbsp;</label>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, null, new { style = "color:red" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label>&nbsp;</label>
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, null, new { style = "color:red" })
                </div><div class="col-sm-6">
                    <label>&nbsp;</label>
                    @Html.Password("ConfirmPassword", null, new { placeholder = "Confirm Password" })
                    @Html.ValidationMessage("ConfirmPassword", null, new { style = "color:red" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <label>&nbsp;</label>
                    @Html.TextAreaFor(m => m.Address, new { placeholder = "Address", @class = "form-control", style = "resize:none;margin-bottom:10px", rows = "4" })
                    @Html.ValidationMessageFor(m => m.Address, null, new { style = "color:red" })
                </div>
            </div>
            <div class="login_submit">
                <button type="submit">Register</button>
            </div>
        }
    </div>
</div>