        function AddToCart(ProductId, Price, Qty) {
            var cart = $('#cartIcon');
            var flytoCart;
            if (Qty == 0) // Get TextboxInputPopup
            {
                flytoCart = false;
                Qty = $('#txtProductQtyPopUp').val();
            }
            else if (Qty == -1)
            {
                flytoCart = true;
                Qty = $('#txtProductQty').val();
            }
            else
                flytoCart = true;
         $.ajax({
             type: "POST",
             contentType: 'application/x-www-form-urlencoded; charset=utf-8',
             url: '@Url.Action("AddToCart", "Home")',
             data: {
                 ProductID: ProductId,
                 Price: Price,
                 Qty: Qty,
                 __RequestVerificationToken: $('[name="__RequestVerificationToken"]').val()
             },
             success: function (data) {
                    if (data != null) {
                        flytoCart = true;
                        if (data == "qty") {
                            flytoCart = false;
                            alert("No more items available for this product");
                        }
                        else {
                            BindCart();
                        }
                    }
                    else
                        flytoCart = false;
                }
            });
            var imgtodrag = $("#pImg_" + ProductId);
            if (imgtodrag && flytoCart) {
                var cartoffset = cart.offset();
                var imgclone = imgtodrag.clone()
                    .offset({
                        top: imgtodrag.offset().top,
                        left: imgtodrag.offset().left
                    })
                    .css({
                        'opacity': '0.5',
                        'position': 'absolute',
                        'height': '150px',
                        'width': '150px',
                        'z-index': '100'
                    })
                    .appendTo($('body'))
                    .animate({
                        'top': cartoffset.top + 10,
                        'left': cartoffset.left + 10,
                        'width': 75,
                        'height': 75
                    }, 1000, 'easeInOutExpo');

                setTimeout(function () {
                    //cart.effect("shake", {
                    //    times: 1
                    //}, 200);
                }, 1500);
                imgclone.animate({
                    'width': 15,
                    'height': 15
                }, function () {
                    $(this).detach()
                });
            }
            return false;
        }

        function BindCart() {
        $.ajax({
                type: "GET",
                dataType: 'html',
            url: '@Url.Action("GetCart", "Home")',
                success: function (data) {
                    var $cart = $('#cart');
                    if (data == '')
                        $cart.html("<div class='items_nunber'><span>Cart is empty</span></div>");
                        else {
                        $cart.html(data);
                    }
                }
            });
    }

