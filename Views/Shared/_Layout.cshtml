        }

        function AddSizes(SizeId, SizeName) {
            var hfShoppingSizes = $("#hfShoppingSizes");
            var colorsHeading = $("#colorsHeading");
            hfShoppingSizes.val(null);
            $("#colorsBySizeContainer").html(null);
            hfShoppingSizes.val(SizeId);
            var linkSize = $("#linkSize_" + SizeId);
            if (linkSize.hasClass("SizeSelected")) {
                linkSize.removeClass("SizeSelected");
                $("." + SizeName).remove();
                $('#ColorsBySize').hide();
                hfShoppingSizes.val(null);
            }
            else {
                $('.PSizes').each(function (idx) {
                    $(this).removeClass('SizeSelected');
                });
                linkSize.addClass("SizeSelected");
                var FilteredColors = Color.filter(function (e) {
                    return e.SizeId == SizeId;
                });
                var html = '';
                if (FilteredColors.length > 0) {
                    if (FilteredColors.length == 1) {
                        colorsHeading.html("Available Color");
                    } else {
                        colorsHeading.html("Available Colors");
                    }
                    for (var i = 0; i < FilteredColors.length; i++) {
                        html += "<li id='linkColor_colorBysize" + FilteredColors[i].ColorID + "_" + SizeId + "_" + i + "' class=" + SizeName + ">";
