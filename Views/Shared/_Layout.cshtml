                linkColor.html("&nbsp");
            }
            else {
                $('.PColors').each(function (idx) {
                    $(this).removeClass('ColorSelected');
                    $(this).html("&nbsp");
                });
                linkColor.addClass("ColorSelected");
                linkColor.html("<i class='fa fa-check' style='color: " + getCorrectTextColor(color.dataset.actualcolor)+"'></i>");
