                        html += "&nbsp";
                        html += "</a>";
                        html += "</li>";
                    }
                }
                if (html != '') {
                    $('#ColorsBySize').show();
                    $('#colorsBySizeContainer').append(html);
                }
            }
            if (html == '' || hfShoppingSizes == '' || hfShoppingSizes == null) {
                $('#ColorsBySize').hide();
            }
        }
